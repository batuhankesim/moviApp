@model IEnumerable<Movie>

 @foreach (var movie in Model)
 {  
     <div class="card mb-3">
    <div class="row no-gutter">
        <div class="col-md-3">
            <img src="~/img/@movie.ImageUrl" alt="@movie.Description" class="card-img">
        </div>
        <div class="col-md-9">
            <div class="card-body">
                <h5 class="card-title">
                    <a asp-action="Details" asp-controller="Home"
                     asp-route-id="@movie.Id" style="color: #00BCD4" > @movie.Name
                         </a>
                     </h5>
                <p class="card-text">
                     <strong> YÃ¶netmen: </strong>  @movie.ShortDescription
                </p>
                <p class="card-text">
                   <strong>  Oyuncu Kadrosu:  </strong>  @movie.Cast
                </p>
                <p class="card-text">
                    <small class="text-muted"> @movie.Date </small>
                </p>
            </div>
        </div>
    </div>
</div>
 }   







